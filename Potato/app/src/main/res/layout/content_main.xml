<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/test"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

    <TextView android:text="Create your own succulent garden!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cactus1"
        android:src="@mipmap/cactus1"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cactus2"
        android:src="@mipmap/cactus2"
        android:layout_above="@+id/Cactus7"
        android:layout_toRightOf="@+id/Cactus6"
        android:layout_toEndOf="@+id/Cactus6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cactus3"
        android:src="@mipmap/cactus3"
        android:layout_below="@+id/Cactus7"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cactus4"
        android:src="@mipmap/cactus4"
        android:layout_below="@+id/Cactus2"
        android:layout_toRightOf="@+id/Cactus3"
        android:layout_toEndOf="@+id/Cactus3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cactus5"
        android:src="@mipmap/cactus5"
        android:layout_below="@+id/Cactus7"
        android:layout_toLeftOf="@+id/Cactus7"
        android:layout_toStartOf="@+id/Cactus7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cactus6"
        android:src="@mipmap/cactus6"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/Cactus7"
        android:layout_alignStart="@+id/Cactus7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cactus7"
        android:src="@mipmap/cactus7"
        android:layout_below="@+id/Cactus1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cactus8"
        android:src="@mipmap/cactus8"
        android:layout_above="@+id/Cactus5"
        android:layout_toLeftOf="@+id/Cactus1"
        android:layout_toStartOf="@+id/Cactus1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Plant1"
        android:src="@mipmap/plant1"
        android:layout_alignTop="@+id/Cactus6"
        android:layout_toLeftOf="@+id/Cactus1"
        android:layout_toStartOf="@+id/Cactus1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Plant2"
        android:src="@mipmap/plant2"
        android:layout_alignTop="@+id/Cactus6"
        android:layout_toRightOf="@+id/Cactus3"
        android:layout_toEndOf="@+id/Cactus3" />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView15"
                        android:src="@mipmap/bloempot3"
                        android:layout_marginBottom="42dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView16"
                        android:src="@mipmap/bloempot3"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginRight="26dp"
                        android:layout_marginEnd="26dp"
                        android:layout_alignTop="@+id/imageView15"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView17"
                        android:src="@mipmap/bloempot3"
                        android:layout_gravity="left|center_vertical"
                        android:layout_above="@+id/imageView15"
                        android:layout_toRightOf="@+id/imageView15"
                        android:layout_toEndOf="@+id/imageView15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView19"
                        android:src="@mipmap/bloempot4"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@+id/imageView15"
                        android:layout_toStartOf="@+id/imageView15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView20"
                        android:src="@mipmap/bloempot4"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@+id/imageView16"
                        android:layout_toStartOf="@+id/imageView16" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView13"
                                android:src="@mipmap/bloempot2"
                                android:layout_above="@+id/imageView18"
                                android:layout_toRightOf="@+id/imageView18"
                                android:layout_toEndOf="@+id/imageView18" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView18"
                                android:src="@mipmap/bloempot3"
                                android:layout_marginLeft="27dp"
                                android:layout_marginStart="27dp"
                                android:layout_marginBottom="41dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView11"
                                android:src="@mipmap/bloempot2"
                                android:layout_above="@+id/imageView13"
                                android:layout_alignLeft="@+id/imageView18"
                                android:layout_alignStart="@+id/imageView18" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView14"
                                android:src="@mipmap/bloempot2"
                                android:layout_marginRight="26dp"
                                android:layout_marginEnd="26dp"
                                android:layout_above="@+id/imageView13"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView12"
                                android:src="@mipmap/bloempot2"
                                android:layout_above="@+id/imageView13"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>
                    </FrameLayout>

                </RelativeLayout>

            </FrameLayout>

        </RelativeLayout>


</FrameLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Cactus1"
        android:layout_toEndOf="@+id/Cactus1"
        android:layout_marginBottom="109dp"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purple Leafy Plant"
            android:id="@+id/checkBox1"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:text="Flowering Cactus"
            android:id="@+id/checkBox2"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onCheckboxClicked" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light Blue Cactus"
            android:id="@+id/checkBox7"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onCheckboxClicked" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light Green Cactus"
            android:id="@+id/checkBox3"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fat Red Cactus"
            android:id="@+id/checkBox8"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onCheckboxClicked" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Opuntia Cactus"
            android:id="@+id/checkBox4"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onCheckboxClicked" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue Cactus"
            android:id="@+id/checkBox9"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onCheckboxClicked" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pastel Green Cactus"
            android:id="@+id/checkBox5"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="onCheckboxClicked" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Opuntia Cactus"
            android:id="@+id/checkBox6"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onCheckboxClicked" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green Spiky Plant"
            android:id="@+id/checkBox10"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="onCheckboxClicked" />

    </GridLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use flower pots"
        android:id="@+id/switch1"
        android:layout_gravity="center_horizontal" />


</LinearLayout>



